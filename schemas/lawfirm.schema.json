{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://soat-conecta.com/schemas/lawfirm.schema.json",
  "title": "Law Firm",
  "description": "Schema for a law firm in the SOAT Conecta Lawyer Registry",
  "type": "object",
  "required": ["id", "name", "registrationNumber"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the law firm",
      "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-4[a-f0-9]{3}-[89ab][a-f0-9]{3}-[a-f0-9]{12}$"
    },
    "name": {
      "type": "string",
      "description": "Name of the law firm",
      "minLength": 1,
      "maxLength": 200
    },
    "registrationNumber": {
      "type": "string",
      "description": "Business registration number",
      "pattern": "^[A-Z0-9]{6,20}$"
    },
    "email": {
      "type": "string",
      "description": "Primary email address",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "description": "Primary phone number",
      "pattern": "^\\+?[1-9]\\d{1,14}$"
    },
    "website": {
      "type": "string",
      "description": "Law firm website URL",
      "format": "uri"
    },
    "address": {
      "description": "Primary address",
      "$ref": "address.schema.json"
    },
    "foundedDate": {
      "type": "string",
      "description": "Date when the law firm was founded",
      "format": "date"
    },
    "size": {
      "type": "string",
      "description": "Size of the law firm",
      "enum": ["solo", "small", "medium", "large", "enterprise"]
    },
    "createdAt": {
      "type": "string",
      "description": "Timestamp when the record was created",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "description": "Timestamp when the record was last updated",
      "format": "date-time"
    }
  }
}
